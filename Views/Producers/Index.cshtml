@model IEnumerable<Producers>

@{
    ViewData["Title"] = "Producers List";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.ProdPictureURL)</th>
                <th>@Html.DisplayNameFor(model => model.ProdFullName)</th>
                <th>@Html.DisplayNameFor(model => model.ProdDetails)</th>
            </tr>
            @foreach (var item in Model)
	               {
        <tr>
            <td class="align-middle">
                <img class="rounded-circle" src="@item.ProdPictureURL" alt="@item.ProdFullName" style="max-width: 150px" />
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.ProdFullName)
            </td>
            <td class="align-middle">
                @Html.DisplayNameFor(modelItem => item.ProdDetails)
            </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ProdId"><i class="bi bi-pencil-square"></i>Edit </a> |
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.ProdId"><i class="bi bi-eye"></i>Details </a> |
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ProdId"><i class="bi bi-trash"></i>Delete </a>
            </td>
        </tr>
	               }
        </table>
    </div>

</div>