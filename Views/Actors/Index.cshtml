@model IEnumerable<Actors>
    
@{
    ViewData["Title"] = "Actors List";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.ActPictureURL)</th>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.AboutAct)</th>
            </tr>
            @foreach (var item in Model)
	               {
        <tr>
            <td class="align-middle">
                <img class="rounded-circle" src="@item.ActPictureURL" alt="@item.FullName" style="max-width: 150px" />
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td class="align-middle">
                @Html.DisplayNameFor(modelItem => item.AboutAct)
            </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ActId"><i class="bi bi-pencil-square"></i>Edit </a> |
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.ActId"><i class="bi bi-eye"></i>Details </a> |
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ActId"><i class="bi bi-trash"></i>Delete </a>
            </td>
        </tr>
	               }
        </table>
    </div>

</div>