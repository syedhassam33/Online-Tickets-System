@model Actors

@{
    ViewData["Title"] = "Add a new actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ActPicturePreview"  class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ActPictureURL" class="control-label"></label>
                        <input asp-for="ActPictureURL" class="form-control" />
                        <span asp-validation-for="ActPictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AboutAct" class="control-label"></label>
                        <input asp-for="AboutAct" class="form-control" />
                        <span asp-validation-for="AboutAct" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
       $(document).ready(function () {
          var output = document.getElementById('ActPicturePreview');
            output.src = $("ActPictureURL").val();
        })
       $("#ActPictureURL").on("change", function () {
            var output = document.getElementById('ActPicturePreview');
            output.src = $(this).val();
        })
    </script>
}